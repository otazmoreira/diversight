<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="32dp"

        android:textColor="@color/black_text"
        android:textSize="@dimen/text_large"
        android:fontFamily="@font/mulish"
        tools:text="Label"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_diver_input"
        android:paddingHorizontal="16dp"

        android:textSize="@dimen/heading_h7"

        tools:hint="Placeholder"
        android:textColorHint="@color/black_text"
        app:layout_constraintTop_toBottomOf="@id/label"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:visibility="gone"

        android:textSize="@dimen/text_small"
        android:fontFamily="@font/mulish"
        android:textColor="#6C757D"

        tools:text="Message"

        app:layout_constraintTop_toBottomOf="@id/editText"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/toggle"
        android:visibility="gone"
        android:layout_width="48dp"
        android:layout_height="48dp"

        android:src="@drawable/ic_eye"
        android:background="@color/transparent"

        android:layout_marginEnd="4dp"

        app:layout_constraintEnd_toEndOf="@id/editText"
        app:layout_constraintTop_toTopOf="@id/editText"
        app:layout_constraintBottom_toBottomOf="@id/editText"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/containerItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="-1dp"
        android:visibility="gone"

        android:background="@drawable/bg_diver_input_focus"
        android:orientation="vertical"
        android:paddingTop="58dp"
        app:layout_constraintTop_toTopOf="@id/editText" />

    <View
        android:id="@+id/filterClick"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"

        app:layout_constraintTop_toTopOf="@id/editText"
        app:layout_constraintBottom_toBottomOf="@id/editText"
        app:layout_constraintEnd_toEndOf="@id/editText"
        app:layout_constraintStart_toStartOf="@id/editText"/>

</androidx.constraintlayout.widget.ConstraintLayout>