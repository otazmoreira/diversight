<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Header items default-->
    <style name="DefaultHeader">
        <item name="layout_constraintBottom_toBottomOf">@id/backgroundTop</item>
        <item name="layout_constraintTop_toTopOf">@id/backgroundTop</item>
        <item name="layout_constraintStart_toStartOf">@id/backgroundTop</item>
        <item name="layout_constraintVertical_bias">@dimen/bias_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default_horizontal</item>
    </style>

    <!--Header title-->
    <style name="TitleHeader" parent="@style/DefaultHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/heading_h3</item>
    </style>

    <!--Header title centralized-->
    <style name="TitleHeader.Center">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintVertical_bias">@dimen/bias_layout_center</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginStart" />
    </style>

    <!--Header title update fragment centralized-->
    <style name="TitleHeader.Center.Update">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintVertical_bias">0.30</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginStart" />
    </style>

    <!--Header title in fragment_user.xml-->
    <style name="TitleHeader.Avatar">
        <item name="layout_constraintStart_toStartOf" />
        <item name="android:layout_marginStart">16dp</item>

    </style>

    <!--Header back button-->
    <style name="BackButton" parent="DefaultHeader">
        <item name="android:layout_width">@dimen/back_button_dimension</item>
        <item name="android:layout_height">@dimen/back_button_dimension</item>
        <item name="android:paddingStart">@dimen/padding_back_button</item>
        <item name="android:paddingTop">@dimen/padding_back_button</item>
        <item name="android:paddingEnd">@dimen/padding_back_button</item>
        <item name="android:paddingBottom">@dimen/padding_back_button</item>
        <item name="layout_constraintTop_toTopOf">@id/titleHeader</item>
        <item name="layout_constraintBottom_toBottomOf" />
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="BackButton.Item">
        <item name="layout_constraintTop_toTopOf">@id/itemTitleHeader</item>
    </style>

    <!--Material button with icon-->
    <style name="IconMaterialButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/white_0</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:letterSpacing">0</item>

        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <!--Material button-->
    <style name="MaterialButton" parent="IconMaterialButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_default_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_default_horizontal</item>
        <item name="android:elevation">8dp</item>
        <item name="layout_constraintBottom_toBottomOf"/>
    </style>

    <!--Material button-->
    <style name="MaterialButton.Update">
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <!--Material button with icon - Send button-->
    <style name="IconMaterialButton.Send">
        <item name="android:paddingStart">@dimen/margin_default_horizontal</item>
        <item name="android:paddingEnd">@dimen/margin_default_horizontal</item>
    </style>

    <!--Material button in fragment_user.xml-->
    <style name="MaterialButtonText" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/blue_0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="MaterialButtonText.User">
        <item name="android:layout_marginStart">@dimen/margin_default_horizontal</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="layout_constraintHorizontal_bias">@dimen/bias_none</item>
        <item name="icon">@drawable/ic_edit</item>
    </style>

    <style name="MaterialButtonText.Onboard">
        <item name="layout_constraintStart_toStartOf" />
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="MaterialButtonText.Onboard.Bottom">
        <item name="android:layout_marginEnd" />
        <item name="android:layout_marginTop" />
    </style>

    <!--Material button in menu filter-->
    <style name="FilterMaterialButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:checkable">true</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/cs_filter_text</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:letterSpacing">0</item>
        <item name="backgroundTint">@color/cs_filter</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">5dp</item>
        <item name="iconTint">@color/cs_filter_text</item>
        <item name="strokeColor">@color/white_minus_1</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="cornerRadius">7dp</item>
    </style>

    <style name="TitleListResearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:paddingStart">@dimen/margin_default_horizontal</item>
        <item name="android:paddingEnd">@dimen/margin_default_horizontal</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/black_0</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="ListResearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/margin_default_horizontal</item>
        <item name="android:paddingEnd">@dimen/margin_default_horizontal</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="ItemResearchSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="HorizontalStroke">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/black_2</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_default_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_default_horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/cs_input</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="boxStrokeErrorColor">@color/red_0</item>
    </style>

    <style name="TextInputLayout.DropDownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart"/>
        <item name="android:layout_marginEnd"/>
        <item name="android:layout_marginBottom" />
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="TextInputLayoutDropDownMenu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginStart">@dimen/margin_default_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_default_horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/cs_input</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="TextInputLayoutAuto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">@dimen/heading_h7</item>
        <item name="android:textColorHint">@color/transparent</item>

    </style>

    <style name="TextInputLayoutAuto.DropDownMenu">
        <item name="android:layout_height">48dp</item>
        <item name="android:inputType">none</item>
        <item name="android:drawableEnd">@drawable/ic_arrow</item>
        <item name="android:text">@string/select</item>
    </style>

    <style name="TitleInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginStart">@dimen/margin_default_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_default_horizontal</item>
    </style>

    <style name="InputItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/heading_h7</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="TitleInput.Login">
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="DropDownMenuContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">@dimen/margin_default_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_default_horizontal</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="DropDownMenuOptions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">60dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/blue_0</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextSignUp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/margin_default_horizontal</item>
        <item name="android:paddingEnd">@dimen/margin_default_horizontal</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="FirstWordSignUp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_default_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/margin_default_horizontal</item>
        <item name="android:textSize">@dimen/heading_h3</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="NavHostSignup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="layout_constraintTop_toBottomOf">@id/text</item>
    </style>

    <style name="Dot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="EmoticonContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="EmoticonImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EmoticonDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#434343</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>