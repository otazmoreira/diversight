<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Header items default-->
    <style name="DefaultHeader">
        <item name="layout_constraintBottom_toBottomOf">@id/backgroundTop</item>
        <item name="layout_constraintTop_toTopOf">@id/backgroundTop</item>
        <item name="layout_constraintStart_toStartOf">@id/backgroundTop</item>
        <item name="layout_constraintVertical_bias">@dimen/bias_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default_horizontal</item>
    </style>

    <!--Header title-->
    <style name="TitleHeader" parent="@style/DefaultHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/heading_h3</item>
    </style>

    <!--Header title centralized-->
    <style name="TitleHeader.Center">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintVertical_bias">@dimen/bias_layout_center</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginStart" />
    </style>

    <!--Header title in fragment_user.xml-->
    <style name="TitleHeader.Avatar">
        <item name="layout_constraintStart_toStartOf" />
        <item name="android:layout_marginStart">16dp</item>

    </style>

    <!--Header back button-->
    <style name="BackButton" parent="DefaultHeader">
        <item name="android:layout_width">@dimen/back_button_dimension</item>
        <item name="android:layout_height">@dimen/back_button_dimension</item>
        <item name="android:paddingStart">@dimen/padding_back_button</item>
        <item name="android:paddingTop">@dimen/padding_back_button</item>
        <item name="android:paddingEnd">@dimen/padding_back_button</item>
        <item name="android:paddingBottom">@dimen/padding_back_button</item>
        <item name="layout_constraintTop_toTopOf">@id/titleHeader</item>
        <item name="layout_constraintBottom_toBottomOf" />
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!--Material button with icon-->
    <style name="IconMaterialButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
        <item name="android:textColor">@color/white_0</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">10dp</item>

        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <!--Material button with icon - Send button-->
    <style name="IconMaterialButton.Send">
        <item name="android:paddingStart">@dimen/margin_default_horizontal</item>
        <item name="android:paddingEnd">@dimen/margin_default_horizontal</item>
    </style>

    <!--Material button in fragment_user.xml-->
    <style name="UserMaterialButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/blue_0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/margin_default_horizontal</item>
        <item name="layout_constraintHorizontal_bias">@dimen/bias_none</item>
        <item name="icon">@drawable/ic_edit</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <!--Material button in menu filter-->
    <style name="FilterMaterialButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:checkable">true</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/cs_filter_text</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="backgroundTint">@color/cs_filter</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">5dp</item>
        <item name="iconTint">@color/cs_filter_text</item>
        <item name="strokeColor">@color/white_minus_1</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="cornerRadius">7dp</item>
    </style>

    <style name="TitleListResearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:paddingStart">@dimen/margin_default_horizontal</item>
        <item name="android:paddingEnd">@dimen/margin_default_horizontal</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/black_0</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="ListResearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/margin_default_horizontal</item>
        <item name="android:paddingEnd">@dimen/margin_default_horizontal</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="ItemResearchSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/mulish_bold</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="HorizontalStroke">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/black_2</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>